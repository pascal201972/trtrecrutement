                        <td>{{recruteur[1].Email}}</td>
                        <td>{{recruteur [0].nom}}</td>
                        <td>{{recruteur [0].etablissement}}</td>
                        <td>{{recruteur [0].ville}}</td>
                        <td><button class="btn btn-primary">Valider</button></td>
                    </tr>
                    {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>
{% endblock %}