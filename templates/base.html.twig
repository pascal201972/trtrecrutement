<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
    and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}


    {{ encore_entry_script_tags('js/test') }}
    {% endblock %}
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bgbleuciel">
        <div class="container">
            <a class="navbar-brand" href="#">TRT<i class="fas fa-utensils"></i></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link {% if page == 'home' %} active {% endif %}"
                            href="{{path('app_home')}}">Accueil

                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if page == 'emplois' %} active {% endif %}"
                            href="{{path('app_emplois')}}">Offres d'emplois</a>
                    </li>


                </ul>




                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link {% if page == 'inscription' %} active {% endif %}"
                            href="{{path('app_inscription')}}">Inscription</a>
                    </li>

                    {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                            aria-haspopup="true" aria-expanded="false">{{
                            app.user.email}}</a>

                        <div class="dropdown-menu ">

                            {% if is_granted('ROLE_USER') %}
                            <a class="dropdown-item" href="{{path('app_login')}}">mon espace</a>

                            {% endif %}

                            <a class="dropdown-item" href="{{path('app_logout')}}">Se d√©connecter</a>
                        </div>
                    </li>
                    {% else %}

                    <li class="nav-item">
                        <a class="nav-link {% if page == 'login' %} active {% endif %}"
                            href="{{path('app_login')}}">Connexion</a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    {% block wrapper %}


    {% endblock %}
</body>

</html>